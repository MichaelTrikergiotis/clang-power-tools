{
  "name": "clang-power-tools",
  "version": "4.7.0",
  "description": "Clang Power Tools is a free Visual Studio extension helping Visual Studio C++ developers leverage Clang/LLVM tools.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "pug src/pages --out www",
    "watch": "onchange \"src/pages\" -- npm run build",
    "serve": "http-server ./www",
    "start": "concurrently \"npm run serve\" \"npm run watch\"",
    "deploy:invalidate-cdn": "aws cloudfront create-invalidation --distribution-id E78YHWTAB3YO9 --paths /*",
    "deploy:s3": "aws s3 sync www s3://advinst-clang --delete ",
    "deploy": "npm run build && npm run deploy:s3 && npm run deploy:invalidate-cdn"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Caphyon/clang-power-tools.git"
  },
  "keywords": [
    "clang",
    "vs",
    "visual",
    "studio",
    "extension"
  ],
  "author": "Caphyon",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/Caphyon/clang-power-tools/issues"
  },
  "homepage": "https://github.com/Caphyon/clang-power-tools#readme",
  "devDependencies": {
    "concurrently": "4.1.0",
    "http-server": "0.11.1",
    "onchange": "5.2.0",
    "pug-cli": "1.0.0-alpha6",
    "s3-deploy": "1.2.1"
  }
}
